<body id="bodyid">
  <div class="jumbotron center-block">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 text-center search-container">
          <a href="#">
            <img src="../../assets/logo.png" width="500px" alt="logo-image" class="logo" />
          </a>
          <p>
            <div id="fb-root"></div>
            <div class="fb-login-button" data-width="200" data-max-rows="1" data-size="small" data-button-type="login_with" data-show-faces="false" data-auto-logout-link="true" data-use-continue-as="true"></div>
          </p>
          <form>
            <div class="input-field">
              <input type="search" id="search" class="form-control" placeholder="Search here" required>
            </div>
            <p><a class="btn btn-primary" id="search-button" href="#">Search</a></p>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-sm-2">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Recent Searches</h3>
          </div>
          <div class="panel-body">
            <div id="left-sidebar">
            </div>
          </div>
        </div>
      </div>
      <div id="header-cont" class="col-sm-7">
        {{{ body }}}
      </div>
      <div class="col-sm-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Task Manager</h3>
          </div>
          <div class="panel-body">
            <div id="right-sidebar">
              <p><input type="text" id="todo-input" name="todoinput" class="form-control" placeholder="Add a To-Do"></p>
              <p><a class="btn btn-primary" id="todo-button">Add To-do</a></p>
              <h3>Your To-Do's</h3>
              <div id="todos">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
